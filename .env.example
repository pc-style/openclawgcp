# OpenClaw Gateway Configuration
# Copy this to .env and fill in your values

# Required
OPENCLAW_GATEWAY_TOKEN=your_gateway_token
OPENCLAW_CONFIG_DIR=/home/tieple/.openclaw
OPENCLAW_WORKSPACE_DIR=/home/tieple/.openclaw/workspace
OPENCLAW_LOGS_DIR=/home/tieple/.openclaw/logs

# Telegram (optional but recommended)
TELEGRAM_BOT_TOKEN=
# Comma-separated Telegram user IDs and/or usernames (e.g. "8153548124,@pcstyle")
TELEGRAM_ALLOW_FROM=
# Comma-separated Telegram user IDs and/or usernames for group sender allowlist
TELEGRAM_GROUP_ALLOW_FROM=

# LLM Providers
OPENCLAW_AGENT_MODEL=gemini/gemini-3-flash-preview

OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

GEMINI_API_KEY=your_gemini_api_key
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai

KIMI_API_KEY=your_kimi_api_key
KIMI_BASE_URL=https://api.moonshot.cn/v1

# Optional - R2 Storage
R2_ACCESS_KEY_ID=your_r2_key
R2_SECRET_ACCESS_KEY=your_r2_secret

# Optional - MCP Servers
KEOTHOM_MCP_API_KEY=your_keothom_mcp_key

# Optional - Claude Web Session
CLAUDE_AI_SESSION_KEY=
CLAUDE_WEB_SESSION_KEY=
CLAUDE_WEB_COOKIE=

# Optional - Gateway
OPENCLAW_GATEWAY_PORT=18789
OPENCLAW_BRIDGE_PORT=18790
OPENCLAW_GATEWAY_HOST_BIND=0.0.0.0
OPENCLAW_BRIDGE_HOST_BIND=127.0.0.1
OPENCLAW_GATEWAY_BIND=lan

# Optional - Public URL (A record)
PUBLIC_URL_FQDN=
